#!/bin/sh
# show local and utc time

# list of timezones to display
list='
America/Vancouver
America/Los_Angeles
America/Denver
America/New_York
UTC
Europe/London
CET
Europe/Paris
Europe/Athens
Asia/Dubai
Asia/Ho_Chi_Minh
Asia/Singapore
Asia/Kuala_Lumpur
Asia/Taipei
Asia/Tokyo
Australia/Sydney
'

# compute longest title length
n=0
for tz_full in ${list}
do
  tz="${tz_full##*/}"
  l=${#tz}
  [ ${l} -gt ${n} ] && n=${l}
done

base_date=
# display all timezones
for tz_full in ${list}
do
  tz="${tz_full##*/}"
  printf "%-${n}s  " "${tz}"
  d=$(env TZ="${tz_full}" date '+%F')
  if [ X"${d}" != X"${base_date}" ]
  then
    env TZ="${tz_full}" date '+%F %T%z'
    base_date="${d}"
  else
    env TZ="${tz_full}" date '+     ..    %T%z'
  fi
done
