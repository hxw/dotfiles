#!/bin/sh

ERROR() {
  printf 'error: '
  printf "${@}"
  printf '\n'
  exit 1
}

VERBOSE() {
  [ X"${verbose}" = X"no" ] && return 0
  printf "${@}"
  printf '\n'
}

USAGE() {
  if [ -n "${1}" ]
  then
    printf 'error: '
    printf "${@}"
    printf '\n'
  fi
  echo usage: "${0##*/" '<src> <dest>'
  echo '       --help           -h         this message'
  echo '       --verbose        -v         more messages'
  echo '       --yes            -y         answer yes to all prompts'
  exit 1
}

GetYN() {
  local yorn junk
  while :
  do
    read -p "${*} [y/n] ? " yorn junk
    case "${yorn}" in
      [yY]|[yY][eE][sS])
        return 0
        ;;
      [nN]|[nN][oO])
        return 1
        ;;
      *)
        echo Please answer yes or no
        ;;
    esac
  done
}


# main program
verbose=no
debug=no
prompt=yes

# parse options
while getopts :hvyD-: option
do
  # convert long options
  if [ X"${option}" = X"-" ]
  then
    option="${OPTARG%%=*}"
    OPTARG="${OPTARG#${option}}"
    OPTARG="${OPTARG#=}"
  fi
  case "${option}" in
    (v|verbose)
      verbose=yes
      ;;

    (y|yes)
      prompt=no
      ;;

    (--)
      break
      ;;

    (D|debug)
      debug=yes
      ;;

    (h|help)
      USAGE
      ;;

    ('?')
      USAGE 'invalid option: -%s' "${OPTARG}"
      ;;

    (*)
      USAGE 'invalid option: --%s' "${option}"
      ;;
  esac
done

shift $((OPTIND - 1))

# verify arguments
#[ ${#} -ne 0 ] && USAGE 'extraneous arguments: %s' "${*}"
[ -z "${prompt}" ] && USAGE 'prompt is not set'
[ ${#} -ne 2 ] && USAGE 'exactly two arguments are required'

# enable debugging
[ X"${debug}" = X"yes" ] && set -x

# extract arguments
src="${1}"
dest="${2}"

temp=$(mktemp --tmpdir patchit-XXXXX)

trap 'rm -f "${temp}"' EXIT INT

apply() {
  patch "${dest}" "${temp}"
}

main() {
  diff -uw "${dest}" "${src}" > "${temp}"

  case "${prompt}" in
    [yY]|[yY][eE][sS])
      if [ -s "${temp}" ]
      then
        ${PAGER:-less} "${temp}"
        if GetYN Apply patch to ${dest}
        then
          apply
        fi
      else
        echo No differences between files
      fi
      ;;
    *)
      apply
      ;;
  esac
}

main
