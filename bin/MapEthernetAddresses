#!/bin/sh
# ping all addresses in a /24 network

ERROR()
{
  printf 'error: '
  printf "$@"
  printf '\n'
  exit 1
}

USAGE()
{
  if [ -n "$1" ]
  then
    printf 'error: '
    printf "$@"
    printf '\n'
  fi
  echo usage: $(basename "$0") '<options> <ip-net-24>...'
  echo '       <ip-net-24>      e.g. 192.168.0'
  echo '       --help      -h   this message'
  echo '       --verbose   -v   more messages'
  exit 1
}

# main program
# ------------

verbose=no

getopt=/usr/local/bin/getopt
[ -x "${getopt}" ] || getopt=getopt
args=$(${getopt} -o hv --long=help,verbose -- "$@") || exit 1
# replace the arguments with the parsed values
eval set -- "${args}"

while :
do
  case "$1" in
    -v|--verbose)
      verbose=yes
      shift
      ;;

    --)
      shift
      break
      ;;

    -h|--help)
      USAGE
      ;;

    *)
      USAGE 'invalid option: %s' "$1"
      ;;
  esac
done

case $(uname -s) in
  (Linux)
    ping_options='-q -c 1 -w 2'
    ;;
  (*)
    ping_options='-q -c 1 -t 2'
    ;;
esac

for net in "$@"
do
  echo Mapping ${net}
  i=1
  while [ ${i} -lt 255 ]
  do
    ping ${ping_options} "${net}.${i}" >/dev/null 2>&1 &
    i=$((${i} + 1))
  done
  sleep 3
  arp -an | awk "/\\(${net}.*at *..:/"'{print $2 "\t" $4}' | sort -k1 -V
done
